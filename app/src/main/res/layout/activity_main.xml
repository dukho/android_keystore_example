<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keystore test"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/labelTitle" android:layout_marginTop="16dp"/>

    <TextView
            android:text="-"
            android:minHeight="16dp"
            android:padding="8dp"
            android:background="#cccccc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textRestored" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/labelTitle" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Restore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRestore" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textRestored" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="content"
            android:ems="10"
            android:id="@+id/editInput" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnRestore" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnStore" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editInput" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <TextView
            android:text="-"
            android:minHeight="16dp"
            android:padding="8dp"
            android:background="#cccccc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtAliases" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/btnStore" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Get aliases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGetAliases" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtAliases" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>